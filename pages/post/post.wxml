<view>
  <swiper class="swiper-container" indicator-dots autoplay circular>
    <swiper-item>
      <image class="swiper-item-img" src="/images/wx.png"></image>
    </swiper-item>
    <swiper-item>
      <image class="swiper-item-img" src="/images/vr.png"></image>
    </swiper-item>
    <swiper-item>
      <image class="swiper-item-img" src="/images/iqiyi.png"></image>
    </swiper-item>
  </swiper>

  <block wx:for="{{post_key}}" wx:key="{{index}}">
    <view class="post-item">
      <view class="post-avatar-date">
        <image class="post-avatar-img" src="{{item.avatar}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-content-img" src="{{item.imgSrc}}"></image>
      <text class="post-content-text">{{item.content}}</text>
      <view class="post-like-view">
        <image class="post-like-img" src="/images/icon/chat.png"></image>
        <text class="post-like-text">{{item.collection}}</text>
        <image class="post-like-img" src="/images/icon/view.png"></image>
        <text class="post-like-text">{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>