.welcome-wrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: blueviolet;
}

.user-avatar {
  width: 200rpx;
  height: 200rpx;
  margin-top: 160rpx;
  border-radius: 50%;
}

.user-name {
  margin-top: 100rpx;
  font-size: 35rpx;
  font-weight: 900;
}

.moto {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  margin-top: 170rpx;
  border: 1rpx solid #fff;
  border-radius: 15rpx;
  font-size: 25rpx;
  font-weight: 900;
  color: #fff;
}